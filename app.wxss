/**app.wxss**/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

navigator{
  width: 100%;
  height: 52%;
}

.iconfont{
    font-size: 40rpx;
    vertical-align: bottom;
    display:inline-block;
}

page{
  min-height: 100%;
}
.container {
  min-height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 

page{
    font-size: 32rpx;
}

.fl{
    float: left;
}
.fr{
    float: right;
}

.clearfix{
    zoom:1;
}
.clearfix:after {
    content:""; 
    display: block; 
    clear:both; 
}
.hide{
    display:none !important;
}
.one-curt-text{
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;

}

.menu-item{  
  width: 25%;
  height:100%;  
 display: flex;
 flex-direction:column;
 align-items: center; 
 justify-content: space-around;
 font-size:24rpx;  
}  
.menu-item:nth-child(1) .img{ 
  width:75rpx;
  height:60rpx;  
}
.menu-item:nth-child(2) .img{ 
  width:72rpx;
  height:60rpx;  
}
.menu-item:nth-child(3) .img{ 
  width:60rpx;
  height:66rpx;  
}
.menu-item:nth-child(4) .img{ 
  width:68rpx;
  height:60rpx;  
}  
.tab-bar{  
  position: fixed;
  z-index:1000;  
  width: 100%;  
  background: #fff;
  display: flex;
  flex-wrap: wrap;
  height:110rpx;  
} 