/**index.wxss**/
@import "../../components/zixun/zixun.wxss";
page{
  background: #f7f7f7;
}
.topcontainer{
  padding:36rpx 40rpx;
}
.topcontainer-content{
  width:670rpx;
  height:395rpx;
  background:#fff;
  box-shadow:1rpx 3rpx 29rpx 0rpx rgba(160,160,160,0.08);
}
.topcontainer-content-left{
  width:326rpx;
  height:100%;
 -webkit-clip-path:polygon(0rpx 0px,270rpx 0,100% 100%,0 100%);
  overflow: hidden;
}
.topcontainer-content-left image{
  width:100%;
  height:100%;
}
.topcontainer-content-right{
  width:344rpx;
  height:100%;
  padding-left:19rpx;
  box-sizing: border-box;
  padding-right:32rpx;
}
.title{
  display: flex;
  flex-direction: column;
  align-items: center;
  line-height:1;
  padding-top:47rpx;
  margin-bottom:43rpx;
}
.title text:first-child{
  font-size:32rpx;
  color:#353535;
}
.title text:last-child{
  font-size:22rpx;
  color:#6C7791;
  margin-top:17rpx;
}
.item {
  line-height: 32rpx;
  font-size:22rpx;
  color:#353535;
  margin-bottom:18rpx;
  display: flex;
}
.item image{
  width:32rpx;
  height:32rpx;
  flex: 0 0 32rpx;
  margin-right:28rpx;
}
.slidetoggle{
  width:100%;
}
.slidetoggle view{
  width:100%;
  height:92rpx;
  text-align: center;
  line-height:92rpx;
  background:#fff;
  font-size:24rpx;
  color:#9D9D9D;
}
.slidetoggle image{
  display: inline-block;
  width:17rpx;
  height:9rpx;
  margin-left:10rpx;
  position: relative;
  top:-5rpx;
}
.slide-contaire{
  height:auto;
  width:100%;
  box-sizing: border-box;
  padding:20rpx 40rpx;
  transition: all 0.3s;
}
.slide-contairehide{
  padding:0 40rpx;
  height:0;
  overflow: hidden;
  transition: all 0.3s;
}
.slide-contaireitem{
  display: flex;
  justify-content: space-between;
  margin-bottom:46rpx;
}
.slide-contaireitem text:nth-child(1){
  color:#939393;
  font-size:28rpx;
}
.slide-contaireitem text:nth-child(2){
  flex: 1;
  padding-left:38rpx;
  padding-right:80rpx;
  font-size:28rpx;
  color:#353535;
}
.slide-contaireitem text:nth-child(3){
  width:80rpx;
  height:44rpx;
  line-height: 44rpx;
  border:1rpx solid #1AAD19;
  color:#1AAD19;
  font-size:24rpx;
  text-align: center;
  border-radius: 10rpx;
}
.sharemingpian{
  width:100%;
  height:140rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding:0 38rpx;
}
.sharemingpian text{
  width:320rpx;
  height:80rpx;
  text-align: center;
  line-height:80rpx;
  font-size:28rpx;
  color:#1AAD19;
  border:1rpx solid #1AAD19;
  border-radius: 10rpx;
}
.sharemingpian text:last-child{
  border:none;
  background:#1AAD19;
  color:#fff;
}
.about{
  width:100%;
  height:auto;
  background: #fff;
  padding:0 39rpx;
  box-sizing: border-box;
  margin-top:20rpx;
  padding-top:34rpx;
}
.about-title{
  height:60rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative;
}
.about-title::before{
  content: "";
  display: block;
  width:4rpx;
  height:60rpx;
  background: #1AAD19;
  position: absolute;
  left:0;
  top:0;
}
.about-title text:first-child{
  font-size:29rpx;
  color:#2B333E;
  line-height: 1;
  padding:0 29rpx;
}
.about-title text:last-child{
  font-size:24rpx;
  color:#353535;
  line-height: 1;
  padding:0 48rpx;
}
.about-content{
  width:100%;
  font-size:29rpx;
  color:#000;
  padding-top:50rpx;
}
.about-content text{
  line-height: 52rpx;
  display: block;
  margin-bottom:38rpx;
}
.voice{
  width:100%;
  padding:0 39rpx;
  box-sizing: border-box;
  background: #fff;
  padding-bottom:50rpx;
}
.voice-title{
  height:60rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative;
}
.voice-title::before{
  content: "";
  display: block;
  width:4rpx;
  height:60rpx;
  background: #1AAD19;
  position: absolute;
  left:0;
  top:0;
}
.voice-title text:first-child{
  font-size:29rpx;
  color:#2B333E;
  line-height: 1;
  padding:0 29rpx;
}
.voice-title text:last-child{
  font-size:24rpx;
  color:#353535;
  line-height: 1;
  padding:0 48rpx;
}
.voice-content{
  width:100%;
  height:auto;
  padding:0 39rpx;
  padding-top:60rpx;
  box-sizing: border-box;
}
.voice-item{
  width:100%;
  height:173rpx;
  border:1rpx solid #BFBFBF;
  border-radius: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left:40rpx;
  padding-right:50rpx;
  box-sizing: border-box;
}
.voice-itemleft{
  margin-right:24rpx;
}
.voice-itemleft image{
  width:70rpx;
  height:70rpx;
  display: block;
}
.voice-itemright{
  flex: 1;
  height:100%;
  padding-top:34rpx;
  box-sizing: border-box;  
}
.voice-itemtitle{
  display: block;
  font-size:29rpx;
  color:#000;
  line-height:1;
  margin-bottom:20rpx;
}
.progess-box{
    width: 100%;
    height: 6rpx;
    background-color: #BFBFBF;
    position: relative;
    margin-bottom:14rpx;

}
.progess-box > view {
  background-color: #14AB13;
  height: 6rpx;
  position: absolute;
  z-index: 8;
}
.progess-box > view text {
  position: absolute;
  right: -8rpx;
  top: -6rpx;
  background-color: #44C55D;
  width: 16rpx;
  height: 16rpx;
  display: inline-block;
  border-radius: 50%;
  z-index: 10;
}
.voice-currenttime{
  font-size:28rpx;
  color:#BFBFBF;
  display: flex;
  justify-content: space-between;
}

.mask{
  width:100%;
  height:100%;
  background: rgba(0,0,0,.7);
  position: fixed;
  left:0;
  top:0;
  z-index: 1000;
  overflow: hidden;
}
.masktel{
  width:100%;
  background: #E7E7E7;
  position: absolute;
  bottom:0;
  left:0;
  z-index: 1001
}
.masktel text{
  display: block;
  height:116rpx;
  width:100%;
  text-align: center;
  font-size:38rpx;
  color:#000;
  background: #fff;
  line-height: 116rpx;
}
.masktel text:last-child{
  margin-top:16rpx;
}
.masktel text:first-child{
  color:#818181;
  font-size:30rpx;
  margin-bottom:1px;
}
.bigheadimg{
  width:100%;
  height:100%;
  position: relative;
}
.bigheadimg image{
  width:100%;
  height:100%;
  position: absolute; 
  bottom:0;
  right:0;
  margin:0;
}
.maskshare{
  width:100%;
  background: #E7E7E7;
  position: absolute;
  bottom:0;
  left:0;
  z-index: 1001
}
.maskshare>text{
  display: block;
  height:80rpx;
  width:100%;
  text-align: center;
  font-size:24rpx;
  color:#000;
  background: #fff;
  line-height: 80rpx;
}
.maskshare-item{  
  width:100%;
  padding:0 190rpx;
  padding-top:8rpx;
  box-sizing: border-box;
  background: #fff;
  display: flex;
  justify-content: space-between;
  padding-bottom:18rpx;
}
.maskshare-item>view button{
  display: inline;
  padding:0; 
  margin:0;
}
.maskshare-item>view button::after{
  border:0;
}
.maskshare-item>view view{
  font-size:24rpx;
  color:#393939;
  line-height:76rpx;
}
.maskshare-item>view image{
    width:90rpx;
    height:90rpx;
    display: block;
}
.maskshare>button{
  width:100%;
  height:88rpx;
  font-size:28rpx;
  color:#393939;
  background: #fff;
  line-height: 88rpx;
}